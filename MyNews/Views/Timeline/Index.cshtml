@using MyNews.Models;

@{
    ViewData["Title"] = "News";
    ViewBag.Title = "Index";
    var data = ViewBag.Message;
}

<nav class="navbar navbar-light border-bottom border-dark">
    <div class="container">
        <form class="form-inline">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
        </form>
        <img src="~/images/DefaultAvatar.svg" class="" alt="Photo">
    </div>
</nav>

<div class="container-sm mt-4">
    <div class="d-flex justify-content-center">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center">
              <img src="~/images/DefaultAvatar.svg" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">@data.Title</h5>
                <p class="card-text">@data.Description</p>
                <p class="card-text"><small class="text-muted">@data.DateTime</small></p>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>